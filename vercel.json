{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/sitemap.xml",
      "destination": "/api/sitemap.xml"
    },
    {
      "source": "/rss.xml",
      "destination": "/api/rss.xml"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
